<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moon.myreadapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.ReadApplication"
        android:allowBackup="true"
        android:icon="@drawable/iconfont_user"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme.Dark">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/RedTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.FeedActivity"
            android:label="@string/title_activity_feed"
            android:launchMode="singleTop"
            android:theme="@style/RedTheme"></activity>
        <activity
            android:name=".ui.ArticleActivity"
            android:label="@string/title_activity_article"
            android:launchMode="singleTop"
            android:theme="@style/RedTheme"></activity>
        <activity android:name=".ui.ArticleWebActivity"></activity>
        <activity
            android:name=".ui.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppBaseTheme.Dark.NoActionBar"></activity>
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/AppBaseTheme.Dark.NoActionBar"></activity>
        <activity
            android:name=".ui.ImageBrowserActivity"
            android:label="@string/title_activity_image_browser"
            android:theme="@style/ImageTheme"></activity>
    </application>

</manifest>
