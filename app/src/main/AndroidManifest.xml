<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moon.myreadapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.ReadApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme.Dark" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/RedTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ChannelActivity"
            android:label="@string/title_activity_channel"
            android:launchMode="singleTop"
            android:theme="@style/RedTheme" >
        </activity>
        <activity
            android:name=".ui.FeedActivity"
            android:label="@string/title_activity_feed"
            android:launchMode="singleTop"
            android:theme="@style/RedTheme" >
        </activity>
        <activity android:name=".ui.FeedWebActivity" >
        </activity>
    </application>

</manifest>
