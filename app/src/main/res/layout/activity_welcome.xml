<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:padding="@dimen/normal_padding"
        android:fitsSystemWindows="true"
        tools:context="com.moon.myreadapp.ui.WelcomeActivity">

        <LinearLayout
            android:id="@+id/sayHi"
            android:alpha="0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="100dp"
                android:gravity="center"
                android:textColor="@color/txt_white"
                android:text="@string/welcome_smile"/>
            <TextView
                android:id="@+id/word"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:gravity="top"
                android:textColor="@color/txt_white"
                android:text="@string/welcome_word"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/img_size_64"
                android:layout_height="@dimen/img_size_64"
                android:layout_gravity="left|center"
                android:src="@drawable/ic_rss_logo"/>
            <TextView
                android:id="@+id/app_info"
                android:paddingLeft="@dimen/normal_padding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textSize="@dimen/text_h1"
                android:textColor="@color/txt_white"
                android:layout_gravity="left|center"/>
        </LinearLayout>
    </FrameLayout>
</layout>

