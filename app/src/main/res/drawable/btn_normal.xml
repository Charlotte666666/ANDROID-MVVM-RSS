<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list><item>
            <shape>
                <solid android:color="@color/background_selected" />
                <corners android:radius="10dp" />
                <stroke android:width="1dp" android:color="?attr/colorPrimary" />
            </shape>
        </item></layer-list>
    </item>
    <item >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/txt_white" />
                    <corners android:radius="10dp" />
                    <stroke android:width="1dp" android:color="?attr/colorPrimary" />
                    <padding android:left="@dimen/normal_padding" android:right="@dimen/normal_padding" android:top="@dimen/normal_half_padding" android:bottom="@dimen/normal_half_padding"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

