    <style name="PinkTheme" parent="AppBaseTheme.Dark">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>
    </style>

    <style name="PinkDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>
    </style>

    <style name="GreenTheme" parent="AppBaseTheme.Dark">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="GreenDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="ShareDialog" parent="BaseDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppBaseTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBaseTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBaseTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <declare-styleable name="ImageLinearLayout">
        <attr name="imageMaxSize" format="integer" />
    </declare-styleable>

    <style name="ButtomBarItem">
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/text_margin</item>
        <item name="android:paddingRight">@dimen/text_margin</item>
        <item name="android:background">@drawable/selectable_background</item>
    </style>

    <style name="FullscreenTheme" parent="AppBaseTheme.Dark">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
