    <style name="BlueGreyTheme" parent="AppBaseTheme.Dark">
        <item name="colorPrimary">@color/blue_grey</item>
        <item name="colorPrimaryDark">@color/dark_blue_grey</item>
        <item name="colorAccent">@color/accent_blue_grey</item>
    </style>

    <style name="BlueGreyDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/blue_grey</item>
        <item name="colorPrimaryDark">@color/dark_blue_grey</item>
        <item name="colorAccent">@color/accent_blue_grey</item>
    </style>

    <style name="YellowTheme" parent="AppBaseTheme.Dark">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <style name="YellowDialogTheme" parent="BaseDialogTheme">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
